{
  "Template": {
    "prefix": ["="],
    "body": [
      "= ${1:Title}",
      ":nofooter:",
      ":toc: left",
      ":toclevels: 3",
      ":icons: font",
      ":source-highlighter: rouge",
      ":rouge-style: thankful_eyes",
      ":sectnums:",
      ":sectlinks:",
      ":sectanchors:",
      ":stem:"
    ],
    "description": "Template"
  },
  "Code block": {
    "prefix": ["cbl"],
    "body": [
      "[source, ${1:bash}, options=\"nowrap\"]",
      "----",
      "$2",
      "----"
    ],
    "description": "Code block"
  },
  "Inline Code block": {
    "prefix": ["ilc"],
    "body": [
      "`$1`"
    ],
    "description": "Inline Code block"
  },
  "Table": {
    "prefix": ["tbl"],
    "body": [
      "[options=\"header\", frame=\"topbot\", grid=\"none\"]",
      "|===",
      "| ${2:Col_1} | ${3:Col_2}",
      "",
      "| ${4:Col_1_Row_1}",
      "| ${5:Col_2_Row_1}",
      "",
      "|==="
    ],
    "description": "Table"
  },
  "Image": {
    "prefix": ["img"],
    "body": [
      "image::${1:file_name}[align=\"center\",width=800]"
    ],
    "description": "Insert an image"
  },
  "Image with path": {
    "prefix": ["imgp"],
    "body": [
      "image::${1:file_name}[align=\"center\",width=800]",
      "[.text-center]",
      "#_$1_#"
    ],
    "description": "Insert an image with path"
  }
}
